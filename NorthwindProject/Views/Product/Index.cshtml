@model NorthwindProject.MvcWebUI.Models.ProductListViewModel
@addTagHelper"*,Microsoft.AspNetCore.Mvc.TagHelpers"
@addTagHelper"*,NorthwindProject.MvcWebUI"

@{
    Layout = "~/Pages/_Layout.cshtml";
}



<div class="col-md-10">
    <table class="table table-striped" >
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
            <td></td>


        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success"asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">add to Cart</a></td>
            </tr>
        }

    </table>

</div>
<div>
<product-list-pager current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize">

</product-list-pager>
    </div>
